{
  "compilerOptions": {
    "baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
    "declarationDir": "dist/types",
		"sourceMap": true,
		"declarationMap": true,
		"module": "ESNext",
		"target": "ES5",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"strictFunctionTypes": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
    "lib": ["ES5", "ESNext"],
    "types": ["node", "webpack"]
  },
  "include": ["src"],
  "exclude": ["src/postinstall.ts"]
}
