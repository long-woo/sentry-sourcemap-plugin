{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "removeComments": false,
    "lib": ["ES5", "ESNext"],
    "types": ["node", "webpack"]
  },
  "include": ["src"]
}
